<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:id="@+id/login_textinputlayout"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_textinputlayout2"
        app:helperText="tài khoản trên 8 ký tự*"
        app:counterEnabled="true"
        app:counterMaxLength="24"
        app:helperTextTextColor="@color/red"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_baseline_people_24"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="24"
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tài khoản hoặc Email"
         />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle"
        android:id="@+id/login_textinputlayout2"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/login_textinputlayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnlogin"
        app:helperText="Mật khẩu trên 8 ký tự*"
        app:counterEnabled="true"
        app:helperTextTextColor="@color/red"
        app:counterMaxLength="24"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:maxLength="24"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Mật khẩu"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnlogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_textinputlayout2"
        app:layout_constraintVertical_bias=".5"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/bg_button"
        app:layout_constraintBottom_toBottomOf="parent" />
