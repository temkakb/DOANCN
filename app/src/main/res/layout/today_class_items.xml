<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        android:elevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintWidth_percent=".97"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
   <RelativeLayout
       android:paddingTop="20dp"
       android:paddingBottom="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <TextView
           android:id="@+id/shift_time"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:gravity="center"
           android:text="10:00\nAM"
           android:textStyle="bold"
           android:textColor="@color/blue"
           android:textSize="20sp" />




       <LinearLayout
           android:id="@+id/content"
           android:layout_marginStart="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@id/shift_time"
           android:orientation="vertical">

           <TextView
               android:id="@+id/classname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"

               android:text="ádasdsas"
               android:textColor="@color/black"
               android:textSize="18sp"
               android:textStyle="bold" />

           <TextView
               android:textSize="12dp"
               android:id="@+id/shift_teacher"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="180dp"
               android:text="Thầy gì gì đó" />

           <TextView
               android:textSize="12dp"
               android:id="@+id/shift_subject"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Môn : toán" />



       </LinearLayout>

   </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>