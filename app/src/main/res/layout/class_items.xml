<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        android:elevation="0dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintWidth_percent=".97"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
   <RelativeLayout
       android:paddingTop="20dp"
       android:paddingBottom="20dp"
       android:layout_width="match_parent"

       android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:layout_alignParentStart="true"
           android:id="@+id/cardview"
           android:layout_margin="10dp"
           android:layout_width="wrap_content"
           app:cardCornerRadius="40dp"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/avatarteacher"
               android:layout_width="80dp"
               android:src="@drawable/background_login"
               android:scaleType="centerCrop"
               android:layout_height="80dp"
               android:contentDescription="@string/imageteacher" />

       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@id/cardview"
           android:orientation="vertical">

           <TextView
               android:id="@+id/classname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:maxWidth="180dp"
               android:maxHeight="65dp"
               android:text="lớp chuyên trần hưncccccccccccccđcc"
               android:textColor="@color/blue"
               android:textSize="18sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/teacher"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="200dp"
               android:text="thầy:Dương nguyễn minh tân" />
           <TextView
               android:id="@+id/subject"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="180dp"
               android:text="Môn : toán" />
           <TextView
               android:id="@+id/fee"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="5dp"
               android:maxWidth="180dp"
               android:text="phí: 300.000/1 tháng"
               android:textStyle="italic" />
       </LinearLayout>

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btn_enroll"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:layout_marginEnd="10dp"
           android:background="@drawable/bg_button_enroll"
           android:text="đăng ký"
           android:textColor="@color/white"
           android:textSize="11sp" />


   </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>