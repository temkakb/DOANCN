<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_marginTop="20dp"
       android:layout_marginBottom="10dp"
       android:layout_width="match_parent"

       android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:layout_alignParentStart="true"
           android:id="@+id/cardview"
           android:layout_margin="10dp"
           android:layout_width="wrap_content"
           app:cardCornerRadius="20dp"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/avatarteacher"
               android:layout_width="60dp"
               android:src="@drawable/background_login"
               android:scaleType="centerCrop"
               android:layout_height="60dp"
               android:contentDescription="imageteacher" />

       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/cardview"
           android:orientation="vertical">

           <TextView
               android:id="@+id/classname"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:maxWidth="200dp"
               android:maxHeight="40dp"
               android:text="lớp chuyên trần hưng dạodđ"
               android:textColor="@color/blue"
               android:textSize="18dp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/teacher"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="200dp"
               android:text="thầy:Dương nguyễn minh tân" />

           <TextView
               android:id="@+id/subject"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:maxWidth="200dp"
               android:text="Môn : toán" />

           <TextView
               android:id="@+id/fee"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="5dp"
               android:maxWidth="200dp"
               android:text="phí: 300.000/1 tháng"
               android:textStyle="italic" />
       </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/bg_button_enroll"
        android:id="@+id/btn_enroll"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:text="đăng ký"
       android:layout_centerVertical="true"
        android:textSize="11dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"/>


   </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>