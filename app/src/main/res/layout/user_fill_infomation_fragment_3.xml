<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:id="@+id/login_textinputlayout"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:helperText="Trường trung học A, đại học B...*"
            app:counterEnabled="true"
            app:layout_constraintVertical_bias="0.1"
            app:counterMaxLength="50"
            app:helperTextTextColor="@color/red"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_baseline_room_24"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:maxLength="50"
                android:id="@+id/currentWorkPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/currentWorkPlace"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:id="@+id/login_textinputlayout2"
            app:prefixTextColor="@color/black"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/login_textinputlayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:helperText="Tiểu học,Trung học,Đại học...*"
            app:counterEnabled="true"
            app:helperTextTextColor="@color/red"
            app:counterMaxLength="20"
            app:startIconDrawable="@drawable/ic_baseline_school_24"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:maxLength="20"
                android:id="@+id/educationLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/educationLevel"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:id="@+id/login_textinputlayout3"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/login_textinputlayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:helperText="Ngày sinh *"
            app:counterEnabled="true"
            app:helperTextTextColor="@color/red"
            app:startIconDrawable="@drawable/ic_baseline_date_range_24"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateborn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="@string/dateborn"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>