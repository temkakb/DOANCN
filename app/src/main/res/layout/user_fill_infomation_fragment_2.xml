<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:id="@+id/login_textinputlayout"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:counterEnabled="true"
            app:layout_constraintVertical_bias="0.1"
            app:startIconDrawable="@drawable/ic_baseline_wc_24"
            app:helperText="mặc định là giới tính 'khác' *"
            app:helperTextTextColor="@color/red"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:inputType="none"
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gender"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:id="@+id/login_textinputlayout2"
            app:prefixText="+84"
            app:prefixTextColor="@color/black"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/login_textinputlayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:helperText="từ 9 - 11 số  (Không bắt buộc) *"
            app:counterEnabled="true"
            app:helperTextTextColor="@color/red"
            app:counterMaxLength="11"
            app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:maxLength="11"
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="@string/phonenumber"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInputLayoutStyle"
            android:id="@+id/login_textinputlayout3"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/login_textinputlayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent=".8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:helperText="Địa chỉ thường trú (Không bắt buộc) *"
            app:counterEnabled="true"
            app:helperTextTextColor="@color/red"
            app:counterMaxLength="50"
            app:startIconDrawable="@drawable/ic_baseline_edit_location_24"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:maxLength="50"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>